{
  "description": "Black Friday",
  "manifest_version": 3,
  "name": "Black Friday",
  "version": "1.0",
  "homepage_url": "https://github.com/les-enovateurs/black-friday",
  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_icon": {
      "16": "icons/unknown.jpg",
      "32": "icons/unknown.jpg"
    },
    "default_title": ""
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.amazon.fr/*"],
      "js": ["borderify.js"]
    }
  ]
}
