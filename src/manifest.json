{
  "description": "Faites la différence à chaque achat en ligne avec EcoAchat, votre compagnon éco-responsable sur le web !",
  "manifest_version": 2,
  "name": "ÉcoAchat : Achetez en Conscience",
  "version": "1.4",
  "homepage_url": "https://github.com/les-enovateurs/black-friday",
  "icons": {
    "16": "icons/money-16.png",
    "32": "icons/money-32.png",
    "48": "icons/money-48.png",
    "128": "icons/money-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.cdiscount.com/*"],
      "js": ["cdiscount.js"]
    },
    {
      "matches": ["https://*.amazon.fr/*"],
      "js": ["amazon.js"],
      "run_at": "document_end"
    },{
      "matches": ["https://www.temu.com/*"],
      "js": ["temu.js"],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "b7e6552e-f989-432a-bca3-aa5ac3237198@les-enovateurs-b"
    }
  }
}
